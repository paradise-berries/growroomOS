/**
 * Implements hook_ctools_plugin_api().
 */
function growroom_log_input_ctools_plugin_api($module = NULL, $api = NULL) {
  if ($module == "field_group" && $api == "field_group") {
    return array("version" => "1");
  }
  if ($module == "strongarm" && $api == "strongarm") {
    return array("version" => "1");
  }
}

/**
 * Implements hook_views_api().
 */
function growroom_log_input_views_api($module = NULL, $api = NULL) {
  return array("api" => "3.0");
}

/**
 * Implements hook_default_log_type().
 */
function growroom_log_input_default_log_type() {
  $items = array();
  $items['growroom_input'] = entity_import('log_type', '{
    "type" : "growroom_input",
    "label" : "Input",
    "weight" : 0,
    "name_pattern" : "Input: [log:field-growroom-material] [log:field-growroom-area] [log:field-growroom-asset]",
    "name_edit" : "1",
    "done" : "1",
    "rdf_mapping" : []
  }');
  return $items;
}
